#!/bin/bash
#
# Notes: 
#
#   1. Walltime is specified in the form of hours:minutes:seconds
#      (e.g. "12:30:00" 12.5 hours, "0:10:00" for ten minutes)
#
#   2. The email settings can be left blank. Everything else needs
#      a valid value.
#

# Location to use for job scripts, output file, etc.
# Do not include trailing slash; (i.e. use "/work/dir"
#   instead of "/work/dir/")
FUDGE_WORK_DIR="/home/dwilson/OU-FUDGE"


FUDGE_DATA_DIR=""

# Settings for the begin (pre-downscaling) job
QUEUE_BEGIN="express"
WALLTIME_BEGIN="0:05:00"
EMAIL_NOTIFY_BEGIN="dunc.wilson9@gmail.com"

# Settings for the downscaling jobs
QUEUE_DS="batch"
WALLTIME_DS="2:00:00"
EMAIL_NOTIFY_DS=""

# Settings for the combine (post-downscaling) job
QUEUE_COMBINE="batch"
WALLTIME_COMBINE="5:00:00"
EMAIL_NOTIFY_COMBINE="dunc.wilson9@gmail.com"

